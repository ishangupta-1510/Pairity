# ================================================
# ENVIRONMENT VARIABLES TEMPLATE
# ================================================
# Copy this file to .env.development or .env.production
# and update with your actual values.
# 
# NEVER commit .env files with real values to source control!
# Only .env.example should be committed.
# ================================================

# API Configuration
API_BASE_URL=http://localhost:3000/api/v1
SOCKET_URL=http://localhost:3000

# Environment
NODE_ENV=development

# App Configuration
APP_NAME=Pairity
APP_VERSION=1.0.0
APP_BUILD=1

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxxx

# Push Notifications
EXPO_PUSH_TOKEN=
FCM_SERVER_KEY=

# Social Login
GOOGLE_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxx
APPLE_CLIENT_ID=com.pairity.app
APPLE_TEAM_ID=XXXXXXXXXX

# Analytics
MIXPANEL_TOKEN=xxxxxxxxxxxxxxxxxxxxx
AMPLITUDE_API_KEY=xxxxxxxxxxxxxxxxxxxxx
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxx

# AWS S3 (for media storage)
AWS_ACCESS_KEY_ID=xxxxxxxxxxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxx
AWS_REGION=ap-south-1
AWS_S3_BUCKET=pairity-media

# Cloudflare R2 (alternative to S3)
CLOUDFLARE_ACCOUNT_ID=xxxxxxxxxxxxxxxxxxxxx
CLOUDFLARE_ACCESS_KEY_ID=xxxxxxxxxxxxxxxxxxxxx
CLOUDFLARE_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxx
CLOUDFLARE_R2_BUCKET=pairity-media

# Maps
GOOGLE_MAPS_API_KEY=xxxxxxxxxxxxxxxxxxxxx

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_VIDEO_PROFILES=false
ENABLE_VOICE_NOTES=true
ENABLE_VIDEO_CALLS=false
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true

# Rate Limiting
MAX_SWIPES_PER_DAY=100
MAX_MESSAGES_PER_MINUTE=10
MAX_SUPER_LIKES_PER_DAY=3

# Subscription Pricing (in INR)
SUBSCRIPTION_PRICE_MONTHLY=5000
SUBSCRIPTION_PRICE_QUARTERLY=13500
SUBSCRIPTION_PRICE_YEARLY=48000

# Queue Configuration
DAILY_QUEUE_SIZE=10
QUEUE_REFRESH_HOUR=0

# Match Configuration
MATCH_EXPIRY_HOURS=48
ALLOW_MATCH_EXTENSION=true

# Debug Options
DEBUG_MODE=false
SHOW_REDUX_DEVTOOLS=true
LOG_API_CALLS=true
LOG_SOCKET_EVENTS=false

# Test Accounts (for development only)
TEST_MALE_EMAIL=male@test.com
TEST_MALE_PASSWORD=password123
TEST_FEMALE_EMAIL=female@test.com
TEST_FEMALE_PASSWORD=password123
TEST_OTP=123456